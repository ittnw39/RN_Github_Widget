<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 네트워크 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 위젯 권한 -->
    <uses-permission android:name="android.permission.BIND_APPWIDGET" />
    
    <!-- 백그라운드 작업 권한 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- 알림 권한 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- 저장소 권한 (캐시 데이터 저장용) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="false"
      android:theme="@style/AppTheme"
      android:usesCleartextTraffic="${usesCleartextTraffic}"
      android:supportsRtl="true">
      <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>

      <!-- 위젯 Provider - 1x1 -->
      <receiver
        android:name=".GitHubWidgetProvider1x1"
        android:label="GitHub 위젯 1x1"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>
        <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/github_widget_info_1x1" />
      </receiver>
      
      <!-- 위젯 Provider - 2x1 -->
      <receiver
        android:name=".GitHubWidgetProvider2x1"
        android:label="GitHub 위젯 2x1"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>
        <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/github_widget_info_2x1" />
      </receiver>
      
      <!-- 위젯 Provider - 3x1 -->
      <receiver
        android:name=".GitHubWidgetProvider3x1"
        android:label="GitHub 위젯 3x1"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>
        <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/github_widget_info_3x1" />
      </receiver>
      
      <!-- 위젯 Provider - 4x1 -->
      <receiver
        android:name=".GitHubWidgetProvider4x1"
        android:label="GitHub 위젯 4x1"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        </intent-filter>
        <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/github_widget_info_4x1" />
      </receiver>
      
      <!-- 위젯 Provider - 4x2 -->
      <receiver
        android:name=".GitHubWidgetProvider4x2"
        android:label="GitHub 위젯 4x2"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
          <action android:name="com.rn_github_widget.ACTION_REFRESH_WIDGET_4x2" />
        </intent-filter>
        <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/github_widget_info_4x2" />
      </receiver>
      
      <!-- 위젯 Provider - 4x3 -->
      <receiver
        android:name=".GitHubWidgetProvider4x3"
        android:label="GitHub 위젯 4x3"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
          <action android:name="com.rn_github_widget.ACTION_REFRESH_WIDGET_4x3" />
        </intent-filter>
        <meta-data
          android:name="android.appwidget.provider"
          android:resource="@xml/github_widget_info_4x3" />
      </receiver>
    </application>
</manifest>
